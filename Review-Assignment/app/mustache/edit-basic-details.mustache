<div class="card about">
  <div class="about-header">
    <h3 class="about-header-text">BASIC INFORMATION</h3>
  </div>
  <div class="about-content edit-content">
    <form>
      <div class="add-on">
        <span class="glyphicon glyphicon-user icons-users">
        </span>
        <div class="add-input-wrapper">
          <input type="text" class="add-input" name="name" id="inputName" placeholder="FULL NAME" value={{name}}>
          <span class="line"></span>
        </div>
      </div>
      <div class="add-on">
        <span class="glyphicon glyphicon-user icons-users check-icon">
        </span>
        <div class="add-input-wrapper">
          <label for="inputGender" class="Check">Gender</label>
            <span class="form-check form-check-inline checkbox">
              <input class="form-check-input" type="radio" name="gender" id="male" value="Male"></input>
              <label class="form-check-label" for="inlineRadio1">Male</label>
              <input class="form-check-input" type="radio" name="gender" id="female" value="Female">
              <label class="form-check-label" for="inlineRadio2">Female</label>
            </span>
        </div>
      </div>
      <div class="add-on">
        <span class="glyphicon glyphicon-calendar icons-users">
        </span>
        <div class="add-input-wrapper">
          <input type="text" class="add-input" name="name" id="inputBirthDate" placeholder="BIRTH DATE">
          <span class="line"></span>
        </div>
      </div>
      <div class="add-on">
        <span class="glyphicon glyphicon-user icons-users">
        </span>
        <div class="add-input-wrapper">
          <select name="status" class="add-input status" id="inputStatus">
            <option value="Married">Married</option>
            <option value="Single">Single</option>
          </select>
          <span class="line"></span>
        </div>
      </div>
      <div class="add-on">
        <span class="glyphicon glyphicon-user icons-users">
        </span>
        <div class="add-input-wrapper">
          <input type="text" class="add-input" name="name" id="inputLocation" placeholder="LOCATION">
          <span class="line"></span>
        </div>
      </div>
      <div class="buttons">
        <button type="button" class="save btn btn-default btn-primary">Save</button>
        <button type="button" class="cancel btn btn-default btn-inverse">Cancel</button>
      </div>
    </form>
  </div>
</div>
