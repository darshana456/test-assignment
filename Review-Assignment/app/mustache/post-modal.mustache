<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h3 class="modal-title post-title">Post</h3>
    </div>
    <form name="post" class="add-post" autocomplete="off">
    <div class="modal-body">
        <div class="row post-content">
          <div class="col-sm-3">Title
          </div>
          <div class="col-sm-9">
            <input class="title form-control" name="title" id="inputTitle" type="text"></input>
          </div>
        </div>
        <div class="row post-content">
          <div class="col-sm-3">Image-Url
          </div>
          <div class="col-sm-9">
            <input class="image form-control" name="postImage" id="inputImage" type="url"></input>
          </div>
        </div>
        <div class="row post-content">
          <div class="col-sm-3">Description</div>
          <div class="col-sm-9">
            <textarea rows="4" cols="30" class="description form-control" id="inputDesc" type="text" name="description"></textarea>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-default post">Post</button>
      </div>
      </form>
    </div>
</div>
